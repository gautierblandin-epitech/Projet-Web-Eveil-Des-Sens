{% extends "base.html.twig" %}
{% block content %}
    <div class = "row">
        {#                        Background Image Column#}
        <div class = "col-lg-5 d-none d-lg-block">
            <img src="https://picsum.photos/id/180/445/540" style="height: 100%; width: 100%">
        </div>
        {#                        Form Column#}
        <div class = "col-lg-7">
            <div class = "p-5 ">
                {{ form_start(form) }}
                {{ form_errors(form) }}
                <div class = "text-center register-title m-3">
                    Company
                </div>
                <div class = row>
                    <div class = col-lg-6>
                        <div class = 'register-input m-2 p-2 text-left'>
                            {{ form_row(form.company.name) }}
                        </div>
                    </div>
                    <div class = col-lg-6>
                        <div class = 'register-input m-2 p-2 text-left'>
                            {{ form_row(form.company.city) }}
                        </div>
                    </div>
                    <div class = "col-lg-12">
                        <div class = "text-center register-title m-3">
                            Contact
                        </div>
                    </div>
                    <div class = col-lg-6>
                        <div class = 'register-input m-2 p-2 text-left'>
                            {{ form_row(form.first_name) }}
                        </div>
                    </div>
                    <div class = col-lg-6>
                        <div class = 'register-input m-2 p-2 text-left'>
                            {{ form_row(form.last_name) }}
                        </div>
                    </div>
                    <div class = col-lg-12>
                        <div class = 'register-input m-2 p-2 text-left'>
                            {{ form_row(form.email) }}
                        </div>
                    </div>
                    <div class = col-lg-6>
                        <div class = 'register-input m-2 p-2 text-left'>
                            {{ form_row(form.password.first) }}
                        </div>
                    </div>
                    <div class = col-lg-6>
                        <div class = 'register-input m-2 p-2 text-left'>
                            {{ form_row(form.password.second) }}
                        </div>
                    </div>
                    <div class = col-lg-12>
                        <div class = 'register-button bg-success m-2 p-2 text-center'>
                            {{ form_row(form.register) }}
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}