<!DOCTYPE html>
<html lang="en-us">
<head>
    <title>JobsHunter</title>

    <!-- Custom fonts for this template-->
    {#    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">#}

    <!-- Custom styles for this template-->
    <link href = "../bootstrap/dist/css/bootstrap.css" rel = "stylesheet" type = "text/css">
    <link href = "../styles/style.css" rel = "stylesheet" type = "text/css">
</head>

<body class = "d-flex bg-primary">

<div class = container>
    <div class = "row justify-content-center">
        <div class = "col-lg-12 justify-content-center">
            <div class = "card o-hidden border-0 shadow-lg my-5 justify-content-center text-center">
                <div class = "card-body p-0">
                    <div class = "row">
                        {#                        Background Image Column#}
                        <div class = "col-lg-5 d-none d-lg-block">
                            <img src="https://picsum.photos/id/3/445/370" style="height: 100%; width: 100%">
                        </div>
                        {#                        Form Column#}
                        <div class = "col-lg-7">
                            <div class = "p-5 ">
                                <div class = "text-center register-title m-3">
                                    Please sign in
                                </div>
                                <form method="post">
                                    {% if error %}
                                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                    {% endif %}
                                    {% if app.user %}
                                        <div class="mb-3">
                                            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                                        </div>
                                    {% endif %}
                                    <div class = row>
                                        <div class = col-lg-12>
                                            <div class = 'register-input m-2 p-2 text-left'>
                                                <input type="email" class = "register-input-field pl-2" placeholder="Email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
                                            </div>
                                        </div>
                                        <div class = col-lg-12>
                                            <div class = 'register-input m-2 p-2 text-left'>
                                                <input type="password" class = "register-input-field pl-2" placeholder="Password" name="password" id="inputPassword" class="form-control" required>
                                            </div>
                                        </div>

                                        <input type="hidden" name="_csrf_token"
                                               value="{{ csrf_token('authenticate') }}"
                                        >

                                        <div class = col-lg-12>
                                            <div class = 'register-button m-2 p-2 text-center'>
                                                <button class="register-button-input w-100" type="submit">
                                                    Sign in
                                                </button>
                                            </div>
                                        </div>
                                        <div class = "col-lg-12 text-right">
                                            <div class = "pr-2">
                                                <a href = {{ path('registerMenu') }}> No account yet ? Register</a>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap core JavaScript-->
<script src="../vendor/jquery/jquery.js"></script>
<script src="../vendor/bootstrap/js/bootstrap.bundle.js"></script>

<!-- Core plugin JavaScript-->
<script src="../vendor/jquery-easing/jquery.easing.js"></script>

<!-- Custom JavaScript-->
<script src="../js/script.js"></script>

</body>
</html>