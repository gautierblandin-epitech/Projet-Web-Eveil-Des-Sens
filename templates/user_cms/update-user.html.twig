{% extends "base.html.twig" %}
{% block content %}
    <div class = "row">
        {#                        Background Image Column#}
        <div class = "col-lg-5"> bg image</div>
        {#                        Form Column#}
        <div class = "col-lg-7">
            <div class = "p-5 ">
                <div class = "text-center register-title m-3">
                    Add or update some information
                </div>
                {{ form_start(form) }}
                {{ form_errors(form) }}
                <div class = row>
                    <div class = col-lg-6>
                        <div class = 'register-input m-2 p-2 text-left'>
                            {{ form_row(form.first_name) }}
                        </div>
                    </div>
                    <div class = col-lg-6>
                        <div class = 'register-input m-2 p-2 text-left'>
                            {{ form_row(form.last_name) }}
                        </div>
                    </div>
                    <div class = col-lg-12>
                        <div class = 'register-input m-2 p-2 text-left'>
                            {{ form_row(form.email) }}
                        </div>
                    </div>
                    <div class = col-lg-6>
                        <div class = 'register-input m-2 p-2 text-left'>
                            {{ form_row(form.password.first) }}
                        </div>
                    </div>
                    <div class = col-lg-6>
                        <div class = 'register-input m-2 p-2 text-left'>
                            {{ form_row(form.password.second) }}
                        </div>
                    </div>
                    <div class = col-lg-12>
                        <div class = 'register-input m-2 p-2 text-center'>
                            {{ form_row(form.adress) }}
                        </div>
                    </div>
                    <div class = col-lg-12>
                        <div class = 'register-input m-2 p-2 text-center'>
                            {{ form_row(form.phoneNumber) }}
                        </div>
                    </div>
                    <div class = col-lg-12>
                        <div class = 'register-input m-2 p-2 text-center'>
                            {{ form_row(form.birthdate) }}
                        </div>
                    </div>
                    <div class = col-lg-12>
                        <div class = 'register-input m-2 p-2 text-center'>
                            {{ form_row(form.studies) }}
                        </div>
                    </div>
                    <div class = col-lg-12>
                        <div class = 'register-input m-2 p-2 text-center'>
                            {{ form_row(form.gender) }}
                        </div>
                    </div>
                    <div class = col-lg-12>
                        <div class = 'register-input m-2 p-2 text-center'>
                            {{ form_row(form.experience) }}
                        </div>
                    </div>
                    <div class = col-lg-12>
                        <div class = 'register-input m-2 p-2 text-center'>
                            {{ form_row(form.availabilities) }}
                        </div>
                    </div>
                    <div class = col-lg-12>
                        <div class = 'register-input m-2 p-2 text-center'>
                            {{ form_row(form.biography) }}
                        </div>
                    </div>
                    <div class = col-lg-12>
                        <div class = 'register-button m-2 p-2 text-center' label = 'Update information'>
                            {{ form_row(form.register) }}
                        </div>
                    </div>
                    {{ form_end(form) }}
                    <div class = "col-lg-12 text-right">
                        <div class = "pr-2">
                            <a href = {{ path('registerCompany') }}> Working for a company ? Register here</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}